<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".HomePage">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="720dp"
        android:src="@drawable/dragonn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.200" />

    <Button
        android:id="@+id/buttonNotification"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="290dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_notification_home"
        android:backgroundTint="@color/lightBlack"
        android:drawableRight="@drawable/baseline_email_24"
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/containerNews"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/containerStudentNews"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="parent"

        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonHomePageEvents"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/backgoundBlue" />

            <Button
                android:id="@+id/buttonHomePageKits"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/backgoundBlue" />

            <Button
                android:id="@+id/buttonHomePageCuponsAndPartnerships"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/backgoundBlue" />

            <Button
                android:id="@+id/buttonHomePageADD"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/backgoundBlue" />
        </LinearLayout>
    </HorizontalScrollView>

    <View
        android:id="@+id/containerBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/container_login"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>