<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".models.HomePage">


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="720dp"
        android:src="@drawable/dragonn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.200" />

    <Button
        android:id="@+id/buttonNotification"
        android:layout_width="50dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/edit_notification_home"
        android:backgroundTint="@color/lightBlack"
        android:drawableRight="@drawable/baseline_email_24"
        android:padding="15dp"
        app:layout_constraintBottom_toTopOf="@id/horizontalScrollViewNewsWall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollViewNewsWall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/frameLayoutAthleticNewsWall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/containerAthleticNewsWall"
                    android:layout_width="320dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/news_wall"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/textAthleticNewsWall"
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Mural de notícias das atléticas"
                    android:textSize="40dp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayoutUsersNewsWall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp">

                <View
                    android:id="@+id/containerUsersNewsWall"
                    android:layout_width="320dp"
                    android:layout_height="160dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/news_wall"
                    android:backgroundTint="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textUsersNewsWall"
                    android:layout_width="300dp"
                    android:layout_height="140dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:text="Mural de notícias dos usuários"
                    android:textSize="40dp" />
            </FrameLayout>


        </LinearLayout>
    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="440dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonHomePageEvents"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/white" />

            <Button
                android:id="@+id/buttonHomePageKits"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/white" />

            <Button
                android:id="@+id/buttonHomePageCuponsAndPartnerships"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/news_wall"
                android:backgroundTint="@color/white" />

            <!--            <Button-->
            <!--                android:id="@+id/buttonHomePageADD"-->
            <!--                android:layout_width="150dp"-->
            <!--                android:layout_height="180dp"-->
            <!--                android:layout_marginHorizontal="20dp"-->
            <!--                android:background="@drawable/news_wall"-->
            <!--                android:backgroundTint="@color/backgoundBlue" />-->
        </LinearLayout>
    </HorizontalScrollView>


    <View
        android:id="@+id/containerBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/container_login"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>