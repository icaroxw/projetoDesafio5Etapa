<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".models.Profile">


    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginBottom="720dp"
        android:src="@drawable/dragonn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.200" />

    <Button
        android:id="@+id/buttonSendLoginProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/button_style_login"
        android:padding="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintStart_toStartOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonSendLogoutProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/button_style_login"
        android:padding="10dp"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="22dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintStart_toStartOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/containerProfileEditUserLoggedIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/container_login"
        android:backgroundTint="@color/lightBlack"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textUsernameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="25dp"
        android:drawableRight="@drawable/baseline_edit_note_24"
        android:elevation="1dp"
        android:text="Nome"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toTopOf="@+id/containerProfileEditUserLoggedIn" />

    <TextView
        android:id="@+id/editUsernameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/container_edit_text_login"
        android:backgroundTint="@color/lightBlack"
        android:elevation="1dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintStart_toStartOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toBottomOf="@+id/textUsernameProfile" />

    <TextView
        android:id="@+id/textEmailProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="45dp"
        android:drawableRight="@drawable/baseline_edit_note_24"
        android:elevation="1dp"
        android:text="EndereÃ§o de e-mail"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toTopOf="@+id/editUsernameProfile" />

    <TextView
        android:id="@+id/editEmailProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/container_edit_text_login"
        android:backgroundTint="@color/lightBlack"
        android:elevation="1dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintStart_toStartOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toBottomOf="@+id/textEmailProfile" />

    <TextView
        android:id="@+id/textPasswordProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="45dp"
        android:drawableRight="@drawable/baseline_edit_note_24"
        android:elevation="1dp"
        android:text="Senha"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toTopOf="@+id/editEmailProfile" />

    <TextView
        android:id="@+id/editPasswordProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/container_edit_text_login"
        android:backgroundTint="@color/lightBlack"
        android:elevation="1dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintStart_toStartOf="@id/containerProfileEditUserLoggedIn"
        app:layout_constraintTop_toBottomOf="@+id/textPasswordProfile" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_navigation_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>